<%- include ../partials/header.ejs %>

  
<%- include ../partials/main_nav.ejs %>

<!-- Content for the edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form method="POST" class="form">
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the full name of the contact"
                    name="name" 
                    value=<%= Contact.name %> 
                    requried>
                </div>
                <br>

                <div class="form-group">
                    <label for="contactNumberTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="contactNumberTextField"
                    placeholder="Enter contact number"
                    name="contact_number" 
                    value=<%= Contact.contact_number %>
                    requried>
                </div>
                <br>

                <div class="form-group">
                    <label for="emailTextField">Contact Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter contact email"
                    name="email" 
                    value=<%= Contact.email %>
                    requried>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Confirm Edit</button>

                <a href="/contact-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel Edit</a>

            </form>
        </div>
    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>